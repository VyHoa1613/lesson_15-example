extends ../layout/common

block content
    if errors
        each error in errors
            alert.alert-danger= error
    h1 Create User
    form(action="/login",method="POST")
        label(for="name") Name
        br
        input#name(type="text", name="name",value=values ? values : "",class="form-control")
        br
        label(for="pass") PassWord
        br
        input#pass(type="text", name="pass",value=values ? values : "",class="form-control")
        br
        button(class="btn btn-primary mb-2") Create